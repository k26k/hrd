	<select id="getMemberList" resultMap="memberMap">
		SELECT m.userid, userpw, username, enabled, regdate, updatedate, auth  
		FROM tbl_member m 
		LEFT OUTER JOIN tbl_member_auth ma ON m.userid = ma.userid
		ORDER BY ma.auth, m.updatedate DESC
	</select>
	
	<select id="getMember" resultMap="memberMap">
		SELECT m.userid, userpw, username, enabled, regdate, updatedate, auth  FROM tbl_member m 
		LEFT OUTER JOIN tbl_member_auth ma ON m.userid = ma.userid 
		WHERE m.userid = #{userid}
	</select>
	
	<insert id="addMember" parameterType="com.cloud.domain.MemberVO">
		INSERT INTO tbl_member(userid, userpw, username) 
		VALUES(#{userid}, #{userpw}, #{username})
	</insert>
	
	<update id="updateMember" parameterType="Map">
		UPDATE tbl_member 
		SET userid=#{map.m.userid}, userpw=#{map.m.userpw}, username=#{map.m.username}, enabled=#{map.m.enabled}, updatedate=SYSDATE
		WHERE userid = #{map.oldid}
	</update>
	
